def assessing_mindset(*mindset):
    if any(t in mindset for t in("affluent is borned","work hard to become affluent")):
        return "undefined mindset, no one thinks this way"
    elif any(t in mindset for t in ("rich people are genius", "rich people are borned that way")):
        return "narrow mindset"
    elif any(t in mindset for t in ("working hard creates rich people", "combination between hard working and borned is real")):
        return "growth mindset"
print(assessing_mindset("affluent is borned","work hard to become affluent"))
print(assessing_mindset("rich people are genius"))
print(assessing_mindset("working hard creates rich people"))
